<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artlib.letzblog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".LetzBlog"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity" />
        <activity
            android:name=".PostActivity"
            android:label="@string/post_blog" />
        <activity
            android:name=".LoginActivity"
            android:label="Sign In to Blog" />
        <activity
            android:name=".RegisterActivity"
            android:label="Create Account" />
        <activity
            android:name=".SetupActivity"
            android:label="Account Setup" />
        <activity android:name=".BlogPostDetailsActivity" />
        <activity
            android:name=".UpdatePostActivity"
            android:label="Update Post" />
        <activity android:name=".ProfileSettingsActivity"
            android:label="Profile Settings"></activity>
    </application>

</manifest>